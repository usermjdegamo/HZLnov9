@model IEnumerable<H.Models.Category>
@{
    ViewBag.Title = "Category";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>Category</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Added by</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.imageLink" alt="@item.name" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.description)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.User.name)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary edit" onclick="location.href='@Url.Action("CategoryEdit", "Management", new { id = item.id })'" data-id="@item.id"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info" onclick="location.href='@Url.Action("CategoryDetail", "Management", new { id = item.id })'" data-id="@item.id"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white" onclick="location.href='@Url.Action("CategoryDelete", "Management", new { id = item.id })'" data-id="@item.id"><i class="bi bi-trash"></i>Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div>
            <a class="btn btn-success text-white" onclick="location.href='@Url.Action("CategoryAdd", "Management")'"><i class="bi bi-pencil-square"></i>Add a new Category</a>
        </div>
    </div>
</div>

