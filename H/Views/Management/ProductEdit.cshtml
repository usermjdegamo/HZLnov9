@model IEnumerable<H.Models.Product>
@{
    ViewBag.Title = "ProductAdd";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New Perfume Product</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                @using (Html.BeginForm("ProductEdit", "Management", FormMethod.Post))
                {
                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label for="name" class="control-label"></label>
                        <input type="text" value="@ViewBag.ProductName" required name="name" placeholder="Product name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="description" class="control-label"></label>
                        <input type="text" value="@ViewBag.ProductDescription" required name="description" placeholder="Product description" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="imageLink" class="control-label"></label>
                        <input type="text" required value="@ViewBag.ProductImageLink" name="imageLink" placeholder="Image link" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="imageLink" class="control-label"></label>
                        <input type="text" required value="@ViewBag.ProductPrice" name="price" placeholder="Product price" class="form-control" />
                    </div>
                    <div class="form-group hidden">
                        <label for="userID" class="control-label"></label>
                        <input type="text" readonly name="userID" value="@Session["userID"].ToString()" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="categoryID" class="control-label"></label>
                        @{string haha = ViewBag.ProductCategoryName;
                            }
                        @Html.DropDownList("categoryName", null, haha)
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-outline-success float-right" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>


