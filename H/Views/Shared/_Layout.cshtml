<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <style>
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("HZL", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (Session["userID"] != null)
                    {
                        int userRole = 1;
                        userRole = Convert.ToInt32(Session["userRole"].ToString());


                        if (userRole == 0)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">
                                    Management
                                </a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/Management/Category">Category</a>
                                    <a class="dropdown-item" href="/Management/Product">Product</a>
                                </div>
                            </li>
                        }
                        @*<li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown">
                                    Management
                                </a>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/Management/Category">Category</a>
                                    <a class="dropdown-item" href="/Management/Product">Product</a>
                                </div>
                            </li>*@

                        <li>@Html.ActionLink("Profile", "Profile_", "Account")</li>
                        <li>@Html.ActionLink("Cart", "Order", "Management")</li>
                        <li>@Html.ActionLink("Bought", "OrderDone", "Management")</li>
                        <li>@Html.ActionLink("Sign Out", "SignOut", "Account")</li>

                    }
                    else
                    {
                        <li>@Html.ActionLink("Sign Up", "SignUp", "Account")</li>
                        <li>@Html.ActionLink("Sign In", "SignIn", "Account")</li>
                    }
                    <li>
                        @if (Session["userBalance"] != null)
                        {
                            <a style="pointer-events:none;">Balance: @Session["userBalance"].ToString()</a>
                        }
                        else if (Session["userBalance"] == null)
                        {
                        }
                    </li>

                </ul>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>