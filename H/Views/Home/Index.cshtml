@model IEnumerable<H.Models.Product>
@{
    ViewBag.Title = "Index";
}

@if (Session["userID"] != null)
{

    <h2>Welcome to HZL's Perfume collections,  @Session["name"].ToString()</h2>
}
else
{
    <h2>Welcome to HZL's Perfume collections</h2>
}
<h2>Products</h2>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-3">
            <img class="card-img-top" src="@item.imageLink" width="100px" height="100px" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@item.name</h5>
                @{
                    ViewBag.prodID = item.id;
                }
                <p class="card-text">@item.description</p>
                <p class="card-text">Price: @item.price</p>
                @if (Session["userID"] != null)
                {
                    <a class="btn btn-success text-white" onclick="myFunction(); location.href='@Url.Action("OrderAdd", "Management", new { prodID = item.id })';"><i class="bi bi-trash"></i>Add to order</a>
                }
            </div>
        </div>
    }
</div>

<script>
    function myFunction() {
        alert("Added to cart successfully");
    }
</script>


